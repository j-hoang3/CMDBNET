                <td>
                    @item.Comments
                </td>
                <td>
                    @item.InventoriedBy
                </td>
                <td>
                    @item.InventoryDate
                </td>
                <td>
                    @item.LastScan
                </td>
                <td>
                    @item.ModifiedBy
                </td>
                <td>
                    @item.Modified
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Details" asp-route-id="@Model.Versions[0].CmdbID">Details</a> |
    <a asp-page="/Index">Back to List</a>
</div>

